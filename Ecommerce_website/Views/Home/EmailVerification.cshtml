@{
    ViewData["Title"] = "Email Verification";
}

<h2 class="text-center mt-4">Verify Your Email</h2>

<div class="row justify-content-center">
    <div class="col-md-6">

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        @if (ViewBag.InfoMessage != null)
        {
            <div class="alert alert-info">@ViewBag.InfoMessage</div>
        }

        <form asp-action="EmailVerification" method="post">
            <div class="form-group mt-4">
                <label for="verificationCode">Verification Code</label>
                <input type="text" name="verificationCode" class="form-control mt-2" placeholder="Enter the 6-digit code sent to your email" />
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success btn-lg mt-4">Verify & Register</button>
            </div>
        </form>
    </div>
</div>
