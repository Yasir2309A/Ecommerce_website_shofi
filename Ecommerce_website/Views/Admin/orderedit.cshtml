@model Ecommerce_website.Models.order_detail_view

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0">🗘 Edit Order Status</h4>
                </div>
                <div class="card-body">
                    <form asp-action="OrderEdit" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="order_id" value="@Model.order_id" />

                        <div class="mb-3">
                            <label asp-for="order_status" class="form-label fw-bold">Order Status</label>
                            <select asp-for="order_status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Order">Order</option>
                                <option value="Delivered">Delivered</option>
                            </select>
                            <span asp-validation-for="order_status" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success fw-bold">
                                📎 Save Changes
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-end bg-light rounded-bottom-4">
                    <a asp-action="order_table" class="btn btn-secondary">🔙 Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
